@model EXU2_Herrera.Models.EMPLEADO
@{
    ViewBag.Title = "Visualizar";
    string estado;
}
<div>
    <a href="~/Empleado" class="btn btn-secondary text-start">Retroceder</a>
</div>

<div class="card">
    <div class="card-header">
        Visualizar del Empleado
    </div>
    <div class="card-body">
        <div class="form-group">
            <label>DNI</label>
            <div class="input-group">
                @Html.TextBoxFor(x => x.DNI, new { @class = "form-control", required = "required", placeholder = "DNI", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            <label>NOMBRE</label>
            <div class="input-group">
                @Html.TextBoxFor(x => x.NOMBRE, new { @class = "form-control", required = "required", placeholder = "NOMBRE", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            <label>APELLIDO</label>
            <div class="input-group">
                @Html.TextBoxFor(x => x.APELLIDO, new { @class = "form-control", required = "required", placeholder = "APELLIDO", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            <label>EMAIL</label>
            <div class="input-group">
                @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control", required = "required", placeholder = "EMAIL", type = "email", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            <label>CELULAR</label>
            <div class="input-group">
                @Html.TextBoxFor(x => x.CELULAR, new { @class = "form-control", required = "required", placeholder = "CELULAR", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            <label>DIRECCION</label>
            <div class="input-group">
                @Html.TextBoxFor(x => x.DIRECCION, new { @class = "form-control", required = "required", placeholder = "DIRECCION", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            <label>DIRECCION</label>
            <div class="input-group">
               
                @if (Model.ESTADO == "A") {
                    estado = "Activo";
                } else { estado = "Inactivo"; }
                <input type="text" value="@estado" class = "form-control"  disabled >
               
            </div>

        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="ESTADO" value="A" checked>
            <label class="form-check-label" for="flexRadioDefault1">
                ACTIVO
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="ESTADO" value="I">
            <label class="form-check-label" for="flexRadioDefault2">
                INACTIVO
            </label>
        </div>
    </div>
</div>

