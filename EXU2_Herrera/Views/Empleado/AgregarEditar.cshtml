@model EXU2_Herrera.Models.EMPLEADO
@{
    ViewBag.Title = "AgregarEditar";
}

<h2>AgregarEditar</h2>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Empleado/Index">Empleado</a>
        </li>
    </ol>
</nav>


@using (Html.BeginForm("Guardar", "Empleado", FormMethod.Post))
{
    @Html.HiddenFor(x => x.IDEMPLEADO)
    <div class="card">
        <div class="card-header">
            Informacion del Empleado
        </div>
        <div class="card-body">
            <div class="form-group">
                <label>DNI</label>
                <div class="input-group">
                    @Html.TextBoxFor(x => x.DNI, new { @class = "form-control", required = "required", placeholder = "DNI" })
                </div>
            </div>
            <div class="form-group">
                <label>NOMBRE</label>
                <div class="input-group">
                    @Html.TextBoxFor(x => x.NOMBRE, new { @class = "form-control", required = "required", placeholder = "NOMBRE" })
                </div>
            </div>
            <div class="form-group">
                <label>APELLIDO</label>
                <div class="input-group">
                    @Html.TextBoxFor(x => x.APELLIDO, new { @class = "form-control", required = "required", placeholder = "APELLIDO" })
                </div>
            </div>
            <div class="form-group">
                <label>EMAIL</label>
                <div class="input-group">
                    @Html.TextBoxFor(x => x.EMAIL, new { @class = "form-control", required = "required", placeholder = "EMAIL", type = "email" })
                </div>
            </div>
            <div class="form-group">
                <label>CELULAR</label>
                <div class="input-group">
                    @Html.TextBoxFor(x => x.CELULAR, new { @class = "form-control", required = "required", placeholder = "CELULAR" })
                </div>
            </div>
            <div class="form-group">
                <label>DIRECCION</label>
                <div class="input-group">
                    @Html.TextBoxFor(x => x.DIRECCION, new { @class = "form-control", required = "required", placeholder = "DIRECCION" })
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="ESTADO" value="A" checked>
                <label class="form-check-label" for="flexRadioDefault1">
                    ACTIVO
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="ESTADO" value="I">
                <label class="form-check-label" for="flexRadioDefault2">
                    INACTIVO
                </label>
            </div>
        </div>
    </div>

    <br />
    <div class="text-end">
        <button type="submit" class="btn-primary">Guardar</button>
        <a href="~/Empleado" class="btn btn-danger">Cancelar</a>
    </div>
}




