@model List<EXU2_Herrera.Models.DETALLE_PEDIDO>
@{
    ViewBag.Title = "Index";
    int id = 0;
}

<table class="table" id="DatatableP">
    <thead>
        <tr>

            <th style="width:50px; ">Id</th>
            <th style="width:200px; ">IDPEDIDO</th>
            <th style="width:200px; ">CATEGORIA</th>
            <th style="width:80px; ">NOMBRE</th>
            <th style="width:90px; ">PRECIO</th>
            <th style="width:80px; ">CANTIDAD</th>
            <th style="width:80px; ">SUBTOTAL</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var m in Model)
        {
            <tr>
                <td>@(id++)</td>
                <td>@(m.IDPEDIDO)</td>
                
                <td>@(m.PRODUCTO.IDCATEGORIA)</td>
                <td>@(m.PRODUCTO.NOMBRE)</td>
                <td>@(m.PRECIO)</td>
                <td>@(m.CANTIDAD)</td>
                <td>@(m.PRECIO* m.CANTIDAD)</td>

                @*<td style="align-content:center">
                    <a href="~/Empleado/Visualizar/@m.IDEMPLEADO" class="btn btn-xs btn-warning">Visualizar</a>
                    <a href="~/Empleado/AgregarEditar/@m.IDEMPLEADO" class="btn btn-xs btn-primary">Modificar</a>
                    <a href="~/Empleado/Eliminar/@m.IDEMPLEADO" class="btn btn-xs btn-danger" onclick="return confirmar('¿Está seguro de eliminar el registro');">Eliminar</a>
                </td>*@
            </tr>
        }
    </tbody>
</table>
